<Page x:Class="ApiPeek.App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel>
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        
        <Button x:Name="StartButton" Content="Start API Peek" Click="ButtonBase_OnClick"
            HorizontalAlignment="Left"/>
        </Grid>

        <Grid>

            <TextBox x:Name ="OutBox" TextWrapping="Wrap" 
               TextAlignment="Justify" FontSize="20" Height="400" />
        </Grid>
    </StackPanel>
</Page>